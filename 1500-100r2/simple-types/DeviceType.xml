<?xml version="1.0" encoding="UTF-8"?>
<validation_suite>
    <description>Tests for the DeviceType data type.</description>
    <data_type>DeviceType</data_type>
    <tests>
        <test name="set-membership">
            <description>Verifies that the value is in the enumerated set.</description>
            <valid>
                <value>bmd</value>
                <value>dre</value>
                <value>manual-count</value>
                <value>opscan-central</value>
                <value>opscan-precinct</value>
                <value>unknown</value>
                <value>other</value>
            </valid>
            <invalid>
                <value><!-- the empty string --></value>
                <value>manual count</value>
                <value>BMD</value>
                <value>some-arbitrary-value</value>
            </invalid>
        </test>
    </tests>
</validation_suite>
